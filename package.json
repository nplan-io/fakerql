{
  "name": "fakerql",
  "private": true,
  "version": "0.0.2",
  "license": "MIT",
  "main": "dist/index.js",
  "scripts": {
    "dev": "npm-run-all --parallel start playground",
    "start": "nodemon -e ts,graphql -x ts-node -r dotenv/config src",
    "playground": "graphql playground",
    "deploy": "now --public --dotenv .env.production && now alias && now rm --yes --safe fakerql.com",
    "build": "rimraf dist && tsc",
    "now-start": "node dist"
  },
  "devDependencies": {
    "@types/cuid": "1.3.0",
    "@types/node": "^9.6.61",
    "dotenv": "4.0.0",
    "nodemon": "^3.1.0",
    "npm-run-all": "4.1.5",
    "ts-node": "4.1.0",
    "typescript": "3.3"
  },
  "dependencies": {
    "@graphql-tools/graphql-file-loader": "^7.5.14",
    "@graphql-tools/load": "^7.8.9",
    "apollo-errors": "1.9.0",
    "compression": "1.7.3",
    "express-jwt": "^8.4.1",
    "faker": "4.1.0",
    "graphql": "^16.6.0",
    "graphql-yoga": "^3.3.0",
    "jsonwebtoken": "^9.0.2",
    "rimraf": "^3.0.2",
    "scuid": "1.1.0"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "trailingComma": "all"
  }
}
